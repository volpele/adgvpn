{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "name": "AdGuard VPN â€” Privacy & Security Beta",
    "short_name": "__MSG_short_name__",
    "author": "Adguard Software Ltd",
    "version": "0.5.0",
    "default_locale": "en",
    "description": "__MSG_description__",
    "icons": {
        "16": "assets/images/icons/green-16.png",
        "128": "assets/images/icons/green-128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "assets/images/icons/grey-19.png",
            "38": "assets/images/icons/grey-38.png"
        },
        "default_title": "__MSG_name__",
        "default_popup": "popup.html"
    },
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://auth.adguard.com/oauth.html*"
            ],
            "js": [
                "auth.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "<all_urls>",
        "activeTab",
        "contextMenus",
        "management",
        "notifications",
        "privacy",
        "proxy",
        "storage",
        "unlimitedStorage",
        "webRequest",
        "webRequestBlocking"
    ],
    "minimum_chrome_version": "55.0",
    "options_page": "options.html"
}